<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Notas.Vistas.VistaAcercaDe">
    <ContentPage.Content>
        <StackLayout >
            <ScrollView>
                <StackLayout Spacing="30">
                    <Label Text="Aplicación de Notas" 
                           TextColor="Black" 
                           FontFamily="RoobertPRO-Regular.ttf#RoobertPRO-Regular"
                           Margin="0,20,0,0" 
                           FontSize="24"
                           HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand"/>

                    <Label Text="Esta aplicación te permite crear, editar y eliminar notas de forma sencilla. Organiza tus tareas, actividades, recordatorios y cualquier otra categoría que desees, manteniendo todo al alcance de tu mano. " 
                           TextColor="Black"
                           HorizontalTextAlignment="Center"
                           FontSize="16"/>

                    <Label Text="Desarrollado por: " 
                           TextColor="Black" 
                           FontFamily="RoobertPRO-Regular.ttf#RoobertPRO-Regular"
                           HorizontalTextAlignment="Center"
                           FontSize="18"/>

                    <Label Text="Milton Esteban, Bustos" 
                           TextColor="Black" 
                           FontFamily="RoobertPRO-Regular.ttf#RoobertPRO-Regular"
                           HorizontalTextAlignment="Center"
                           FontSize="16"/>

                    <StackLayout >
                        <Label Text="Contacto" 
                               TextColor="Black"
                               HorizontalTextAlignment="Center"
                               FontSize="18"
                               Margin="0,10,0,5"/>
                        
                        <FlexLayout HorizontalOptions="CenterAndExpand" 
                                    VerticalOptions="CenterAndExpand"
                                    JustifyContent="SpaceAround" 
                                    AlignItems="Center" 
                                    Direction="Row"
                                    Margin="0,0,0,10">

                            <ImageButton Source="github_logo.png" 
                                         BackgroundColor="Transparent" 
                                         CornerRadius="100"
                                         HeightRequest="40"
                                         WidthRequest="50"
                                         Clicked="GitHub"/>
                            
                            <ImageButton Source="linkedin.png" 
                                         BackgroundColor="Transparent" 
                                         CornerRadius="100"
                                         HeightRequest="40"
                                         WidthRequest="50"
                                         Clicked="Linkedin"/>
                            
                            <ImageButton Source="gmail.png" 
                                         BackgroundColor="Transparent" 
                                         CornerRadius="100"
                                         HeightRequest="40"
                                         WidthRequest="50"
                                         Clicked="Gmail"/>
                            
                        </FlexLayout>
                    </StackLayout>

                    <Label Text="Versión 1.0" 
                           TextColor="Gray" 
                           FontFamily="RoobertPRO-Regular.ttf#RoobertPRO-Regular"
                           FontSize="16"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="¡Mira mamá, hice una aplicación!" 
                           TextColor="Black"
                           FontFamily="RoobertPRO-Regular.ttf#RoobertPRO-Regular"
                           FontSize="16"
                           HorizontalTextAlignment="Center"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>